@page "/counter"

<h1>Counter</h1>

<p>Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

<input type="text" @bind-value="labelValue" @bind-value:event="oninput"/> 
<label id="testL">@labelValue</label>

@code {
    private int currentCount = 0;
    private string labelValue = "start here";

    private void IncrementCount()
    {
        currentCount++;
    }

}
